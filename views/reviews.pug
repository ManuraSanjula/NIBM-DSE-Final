extends base
include _reviewCard

mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('/me', 'Me', 'settings')
          +navItem('/order', 'My Orders', 'briefcase')
          +navItem('/reviews', 'My reviews', 'star', true)
          +navItem(`/Billing`, 'Billing', 'credit-card')
      .user-view__content
        .user-view__form-container
          h2.heading-secondary.ma-bt-md Your Reviews
          
          //- WITHOUT API
          //- form.form.form-user-data(action='/submit-user-data' method='POST' enctype='multipart/form-data')
          
          //- WITH API
          each review in reviews
            if(review)
              +reviewCard(review)
              
            .form__group.right
              
        .line &nbsp;
        
        .user-view__form-container
         
