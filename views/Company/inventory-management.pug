        .content-area
            .mobilebar
                .logo.sml iX
                .mbh
                    button.mnubtn(onclick="slideMenu()")
                        i.fa.fa-bars(aria-hidden="true")
            .page-title Inventory
            .page-desc View and manage your stock
             if(cloths)
                 each cloth in cloths
                    .content-bar
                        .itemnum=cloth.intern_id
                        .itemtitle=cloth.intern_name
                        .itemprice=cloth.price
                        .itemstock=cloth.availability
                        .customerRequesting=cloth.user_count
                        .btncontainer
                            button#cloth._id.cbbtn
                                i.fa.fa-trash-o(aria-hidden="true")
                            button#cloth._id.cbbtn
                                i.fa.fa-pencil(aria-hidden="true")

        script.
            var mnu = document.getElementById("mnu");
            var mstate = false;

            function slideMenu() {
                mstate = !mstate;
                if (mstate) {
                    mnu.style.left = "0px";
                    mnu.style.boxShadow = "100px 0px 300px 0px rgba(0,0,0,0.3)";
                } else {
                    mnu.style.left = "-250px";
                    mnu.style.boxShadow = "0px 0px 00px 0px rgba(0,0,0,0.0)";
                }
            }

