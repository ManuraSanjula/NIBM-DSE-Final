doctype html
html(lang="en", dir="ltr")
    head
        meta(charset="utf-8")
        title ClothStore | #{title}
        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="Responsive Account Form Without Media")
        meta(name="author", content="Shift Media")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css")
        style.
            .alert {
                position: fixed;
                top: 0;
                left: 50%;
                -webkit-transform: translateX(-50%);
                transform: translateX(-50%);
                z-index: 9999;
                color: #fff;
                font-size: 1.8rem;
                font-weight: 400;
                text-align: center;
                border-bottom-left-radius: 5px;
                border-bottom-right-radius: 5px;
                padding: 1.6rem 15rem;
                -webkit-box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
                box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25);
            }
            .alert--success {
                background-color: #20bf6b;
            }
            .alert--error {
                background-color: #eb4d4b;
            }
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f8f9fa;
            }
            header {
                background-color: #343a40;
                color: #ffffff;
                padding: 10px 0;
                text-align: center;
            }
            form {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            label {
                display: block;
                margin-bottom: 5px;
            }
            input[type="text"],
            input[type="number"],
            textarea {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }
            input[type="file"] {
                margin-bottom: 10px;
            }
            button {
                padding: 10px 20px;
                background-color: #007bff;
                color: #ffffff;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }
            button:hover {
                background-color: #0056b3;
            }
            .additional-images img {
                max-width: 200px;
                margin-bottom: 10px;
            }
            .delete-button {
                background-color: #dc3545;
            }
            .delete-button:hover {
                background-color: #c82333;
            }
    body
        header
        form#user_employee_form(action="#", method="post")
            h1 Edit the employee
            fieldset
                label
                    | Employee ID
                    br
                    input(type="text", name="employee_id", placeholder="Employee ID", value=`${employee._id}`, required)
                    br
                label
                    | Employee User ID
                    br
                    input(type="text", name="user_id", placeholder="Employee User ID", value=`${employee.user_id._id}`, required)
                    br
                label
                    | Employee User Name
                    br
                    input(type="text", name="user_id", placeholder="Employee User ID", value=`${employee.user_id.name}`, required)
                    br
                label
                    | Salary
                    br
                    input(type="text", name="user_name", placeholder="Salary", value=`${employee.salary}`, required)
                    br
                label
                    | Leaves
                    br
                    input(type="text", name="leaves", placeholder="Leaves", value=`${employee.leaves}`, required)
                    br
                label
                    | Half Days
                    br
                    input(type="text", name="halfdays", placeholder="Half Days", value=`${employee.half_days}`, required)
                    br
                label
                    | JoinDate
                    br
                    input(type="text", name="price", placeholder="JoinDate" value=`${employee.JoinDate}`, required)
                    br
                fieldset.toOrderToBeAvailable
                    | Employee To Order To Be Available ( Click the button if you want to delete the data )
                    ul
                        each item in employee.toOrderToBeAvailable
                            li(id=item)
                                |
                                button()=item
                fieldset.toTargetOrder
                    | Employee To Target Order ( Click the button if you want to delete the data )
                    ul
                        each item in employee.toTargetOrder
                            li(id=item)
                                |
                                button()=item
                fieldset.totalShipments
                    | Total Shipments ( Click the button if you want to delete the data )
                    ul
                        each item in employee.totalShipments
                            li(id=item)
                                |
                                button()=item

                fieldset.isDeliveryPerson
                    legend employee Is DeliveryPerson Or Not
                    if(!employee.isDeliveryPerson)
                        label
                            input(type="radio", name="isDeliveryPerson-value" )
                            | employee Is DeliveryPerson
                        label
                            input(type="radio", name="isDeliveryPerson-value", checked=`true` )
                            | employee Is Not DeliveryPerson
                    else
                        label
                            input(type="radio", name="isDeliveryPerson-value", checked=`true` )
                            | employee Is DeliveryPerson
                        label
                            input(type="radio", name="isDeliveryPerson-value")
                            | employee Is Not DeliveryPerson
                fieldset.isManager
                    legend employee Is Manager Confirmed Or Not
                    if(!employee.isManager)
                        label
                            input(type="radio", name="isManager-value",  )
                            | employee Is Manager
                        label
                            input(type="radio", name="isManager-value", checked=`true` )
                            | employee Is Not Manager
                    else
                        label
                            input(type="radio", name="isManager-value", checked=`true` )
                            | employee Is Manager
                        label
                            input(type="radio", name="isManager-value", )
                            | employee Is Not Manager
                fieldset.isNewEmployee
                    legend employee Is NewEmployee Or Not
                    if(!employee.isNewEmployee)
                        label
                            input(type="radio", name="isNewEmployee-value", )
                            | employee Is new employee
                        label
                            input(type="radio", name="isNewEmployee-value", checked=`true` )
                            | employee Is new employee
                    else
                        label
                            input(type="radio", name="isNewEmployee-value", checked=`true` )
                            | employee Is new employee
                        label
                            input(type="radio", name="isNewEmployee-value")
                            | employee not new employee
                fieldset.isActive
                    legend employee isActive Or Not
                    if(!employee.isActive)
                        label
                            input(type="radio", name="isActive-value",)
                            | employee is active
                        label
                            input(type="radio", name="isActive-value", checked=`true`)
                            | employee is not active
                    else
                        label
                            input(type="radio", name="isActive-value", checked=`true`)
                            | employee isActive
                        label
                            input(type="radio", name="isActive-value")
                            | employee is not active
                fieldset.isFired
                    legend employee isActive Or Not
                    if(!employee.isFired)
                        label
                            input(type="radio", name="isFired-value",)
                            | employee is Fired
                        label
                            input(type="radio", name="isFired-value", checked=`true`)
                            | employee is not Fired
                    else
                        label
                            input(type="radio", name="isFired-value", checked=`true`)
                            | employee isFired
                        label
                            input(type="radio", name="isFired-value")
                            | employee is not Fired
            if(!view)
                footer
                    button Submit
if(!view)
    script(src="/js/company/bundle.js")
