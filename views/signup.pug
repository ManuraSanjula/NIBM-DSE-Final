doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="shortcut icon", type="image/png", href="/img/favicon.png")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
    title Cloth Store | Create your account!
  body(data-alert="")
    // HEADER
    header.header
      nav.nav.nav--tours
        a.nav__el(href="/") All Cloths
      .header__logo
        img(src="/img/logo-white.png", alt="Natours logo")
      nav.nav.nav--user
        a.nav__el(href="/login") Log in
        a.nav__el.nav__el--cta(href="/signup") Sign up
    // CONTENT
    main.main
      .login-form
        h2.heading-secondary.ma-bt-lg Create your account!
        form.form.form--signup
          .form__group
            label.form__label(for="name") Your name
            input.form__input(id="name", type="text", placeholder="", required)
          .form__group
            label.form__label(for="email") Email address
            input.form__input(id="email", type="email", placeholder="you@example.com", required)
          .form__group
            label.form__label(for="address") Your address
            input.form__input(id="address", type="text", placeholder="Your address", required)
          .form__group
            label.form__label(for="phoneNumber") Phone Number
            input.form__input(id="phoneNumber", type="phoneNumber", required)  
          .form__group.ma-bt-md
            label.form__label(for="password") Password
            input.form__input(id="password", type="password", placeholder="••••••••", required, minlength="8")
          .form__group.ma-bt-md
            label.form__label(for="passwordConfirm") Confirm password
            input.form__input(id="passwordConfirm", type="password", placeholder="••••••••", required, minlength="8")
          .form__group
            button.btn.btn--green Sign up
    // FOOTER
    footer.footer
      ul.footer__nav
        li: a(href="#") About us
        li: a(href="#") Download apps
        li: a(href="#") Become a guide
        li: a(href="#") Careers
        li: a(href="#") Contact
      p.footer__copyright &copy; by Manura Sanjula & Enosh Anupama.
    script(src="https://js.stripe.com/v3/")
    script(src="/js/bundle.js")
